{% extends 'base.html.twig' %}

{% block title %}Bienvenue{% endblock %}

{% block body %}

{# Affichage du logo #}
    <div class="d-flex justify-content-center">
        <img src="{{asset('assets/img/M.png')}}" alt="logo McDouille">
    </div>

    <section class="container d-flex justify-content-center">
        <div class="row">
            <div class="col">
                <form method="post" class="">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


{# Si un utilisateur est connect√© on affiche son Email#}
    {% if app.user %}
        <div class="mb-3">
            Bonjour {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Entrez votre Mail pour commencer</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary my-3" type="submit">
        Let's go !
    </button>
</form>
            </div>
        </div>
    </section>


{% endblock %}
